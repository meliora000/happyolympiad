<div style="border-bottom: 1px solid red">
	<%= link_to "Post list", posts_path %>
	<div style="float:right;">
	<% if user_signed_in? %>
	  <%= image_tag(current_user.image, size: '20x20', style:'border-radius:3px;vertical-align:top;') if current_user.image %>
		<%= link_to current_user.name, "/profile/#{current_user.id}" %>
		<%= link_to 'logout', destroy_user_session_path, method: :delete %>
	<% else %>
		<%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
	<% end %>
	</div>
</div>