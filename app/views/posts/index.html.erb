
<% @posts.each do |post| %>

    <div class="col s12 m12 l8">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text" style="padding:0px; padding-left: 10px;">
          <div class="card-title">
            <div class="chip">
              <%= image_tag(post.user.image) %>
              <%= post.user.name %>
            </div>
            <div class="chip">
              <%= post.created_at.strftime("%m/%d/%y") %>
            </div>
          </div>

          <div class="card-content">
            <p><%= post.content %></p>
          </div>
        </div>


        <div class="card-action">
          <i class="small white-text material-icons comment-button">comment</i>
          <i class="small white-text material-icons">email</i>
          <div class="side-box">
            <%= render post.comments %>
          </div>
        </div>
      </div>
    </div>




<% end %>

<!--create button-->
<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
  <a class="btn-floating btn-large teal" href="/posts/new">
    <i class="large material-icons">mode_edit</i>
  </a>
  <ul>
    <li><a class="btn-floating red"><i class="material-icons">insert_chart</i></a></li>
    <li><a class="btn-floating yellow darken-1"><i class="material-icons">format_quote</i></a></li>
    <li><a class="btn-floating green"><i class="material-icons">publish</i></a></li>
    <li><a class="btn-floating blue"><i class="material-icons">attach_file</i></a></li>
  </ul>
</div>